{
  "name": "baitbreaker",
  "version": "1.0.0",
  "description": "Chrome extension to detect and summarize clickbait articles using AI",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "npm run build && cd dist && zip -r ../baitbreaker.zip .",
    "version:check": "node -e \"const p=require('./package.json').version; const m=require('./manifest.json').version; if(p!==m){console.error('Version mismatch!',{package:p,manifest:m}); process.exit(1);} console.log('Versions match:',p);\"",
    "prebuild": "npm run version:check",
    "prepackage": "npm test"
  },
  "keywords": [
    "chrome-extension",
    "clickbait",
    "ai",
    "summarization"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.bundle.js"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
